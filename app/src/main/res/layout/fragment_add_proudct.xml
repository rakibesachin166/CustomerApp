<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.AddProductFragment">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/linearLayoutContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_4sdp"
        android:orientation="vertical">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/linearLayoutCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/materialCardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/_4sdp">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/linearLayoutHeader"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:elevation="@dimen/_4sdp"
                        android:orientation="horizontal"
                        android:paddingVertical="@dimen/_4sdp">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/textViewHeader"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="@dimen/_6sdp"
                            android:text="Add Product"
                            android:textColor="@color/orange_primary"
                            android:textSize="@dimen/_12ssp"
                            android:textStyle="bold" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                </com.google.android.material.card.MaterialCardView>


                <ScrollView
                    android:id="@+id/scrollViewContainer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="none">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/linearLayoutContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_15sdp"
                        android:orientation="vertical"
                        android:paddingVertical="@dimen/_10sdp">


                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:orientation="vertical">

                            <com.google.android.material.card.MaterialCardView

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                app:cardCornerRadius="@dimen/_4sdp"

                                >

                                <androidx.appcompat.widget.LinearLayoutCompat
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_2sdp"
                                    android:elevation="@dimen/_4sdp"

                                    android:orientation="horizontal"
                                    android:paddingVertical="@dimen/_4sdp">


                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:gravity="center_vertical"
                                        android:padding="@dimen/_6sdp"
                                        android:text="Select Top Category"
                                        android:textColor="@color/orange_primary"
                                        android:textSize="@dimen/_12ssp"
                                        android:textStyle="bold" />
                                </androidx.appcompat.widget.LinearLayoutCompat>


                            </com.google.android.material.card.MaterialCardView>


                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:background="@drawable/shape_corner_radius"
                                android:elevation="@dimen/_4sdp"
                                app:cardCornerRadius="@dimen/_4sdp">

                                <androidx.appcompat.widget.AppCompatSpinner
                                    android:id="@+id/topCategorySpinner"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingHorizontal="@dimen/_6sdp"
                                    android:paddingVertical="@dimen/_10sdp"
                                    android:textSize="@dimen/_12ssp" />
                            </androidx.appcompat.widget.LinearLayoutCompat>


                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:orientation="vertical">

                            <com.google.android.material.card.MaterialCardView

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                app:cardCornerRadius="@dimen/_4sdp"

                                >

                                <androidx.appcompat.widget.LinearLayoutCompat
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_2sdp"
                                    android:elevation="@dimen/_4sdp"

                                    android:orientation="horizontal"
                                    android:paddingVertical="@dimen/_4sdp">


                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:gravity="center_vertical"
                                        android:padding="@dimen/_6sdp"
                                        android:text="Select Child1 Category"
                                        android:textColor="@color/orange_primary"
                                        android:textSize="@dimen/_12ssp"
                                        android:textStyle="bold" />
                                </androidx.appcompat.widget.LinearLayoutCompat>


                            </com.google.android.material.card.MaterialCardView>


                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:background="@drawable/shape_corner_radius"
                                android:elevation="@dimen/_4sdp"
                                app:cardCornerRadius="@dimen/_4sdp">

                                <androidx.appcompat.widget.AppCompatSpinner
                                    android:id="@+id/child1CategorySpinner"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"

                                    android:paddingHorizontal="@dimen/_6sdp"
                                    android:paddingVertical="@dimen/_10sdp"
                                    android:textSize="@dimen/_12ssp" />
                            </androidx.appcompat.widget.LinearLayoutCompat>


                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:orientation="vertical">

                            <com.google.android.material.card.MaterialCardView

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="@dimen/_4sdp">

                                <androidx.appcompat.widget.LinearLayoutCompat
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_2sdp"
                                    android:elevation="@dimen/_4sdp"
                                    android:orientation="horizontal"
                                    android:paddingVertical="@dimen/_4sdp">


                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:gravity="center_vertical"
                                        android:padding="@dimen/_6sdp"
                                        android:text="Select Child2 Category"
                                        android:textColor="@color/orange_primary"
                                        android:textSize="@dimen/_12ssp"
                                        android:textStyle="bold" />
                                </androidx.appcompat.widget.LinearLayoutCompat>


                            </com.google.android.material.card.MaterialCardView>


                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:background="@drawable/shape_corner_radius"
                                android:elevation="@dimen/_4sdp"
                                app:cardCornerRadius="@dimen/_4sdp">

                                <androidx.appcompat.widget.AppCompatSpinner
                                    android:id="@+id/child2CategorySpinner"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"

                                    android:paddingHorizontal="@dimen/_6sdp"
                                    android:paddingVertical="@dimen/_10sdp"
                                    android:textSize="@dimen/_12ssp" />
                            </androidx.appcompat.widget.LinearLayoutCompat>


                        </androidx.appcompat.widget.LinearLayoutCompat>


                        <com.google.android.material.textfield.TextInputLayout

                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:elevation="@dimen/_4sdp"
                            android:hint="Name*">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/nameEdt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="text"
                                android:singleLine="true"
                                android:textSize="@dimen/_12ssp" />

                        </com.google.android.material.textfield.TextInputLayout>


                        <com.google.android.material.textfield.TextInputLayout

                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:elevation="@dimen/_4sdp"
                            android:hint="Product Code SKU*">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/codeSkU"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:focusable="false"
                                android:singleLine="true"
                                android:textSize="@dimen/_12ssp" />

                        </com.google.android.material.textfield.TextInputLayout>


                        <com.google.android.material.textfield.TextInputLayout

                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:elevation="@dimen/_4sdp"
                            android:hint="MRP">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/mrpEdt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="number"

                                android:singleLine="true"
                                android:textSize="@dimen/_12ssp" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout

                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:elevation="@dimen/_4sdp"
                            android:hint="Sale Price">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/salePriceEdt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="number"
                                android:singleLine="true"
                                android:textSize="@dimen/_12ssp" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout

                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:elevation="@dimen/_4sdp"
                            android:hint="Discount*">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/discountEdt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="number"
                                android:singleLine="true"
                                android:textSize="@dimen/_12ssp" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout

                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:elevation="@dimen/_4sdp"
                            android:hint="Available Qunatity*">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/availableQuantityEdt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="number"
                                android:singleLine="true"
                                android:textSize="@dimen/_12ssp" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout

                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:elevation="@dimen/_4sdp"
                            android:hint="Product Description And Information">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/descriptionEdt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="top"
                                android:hint="Product Description and required information of Inventory, Selling, Listening"
                                android:inputType="text"
                                android:minHeight="@dimen/_80sdp"
                                android:textSize="@dimen/_12ssp" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/productSubmitButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:background="@drawable/shape_corner_radius_5"
                            android:backgroundTint="@color/orange"
                            android:text="Submit"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12ssp" />

                    </androidx.appcompat.widget.LinearLayoutCompat>


                </ScrollView>

            </androidx.appcompat.widget.LinearLayoutCompat>

        </com.google.android.material.card.MaterialCardView>

    </androidx.appcompat.widget.LinearLayoutCompat>


</FrameLayout>